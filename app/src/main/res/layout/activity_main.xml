<!-- res/layout/activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/main">


    <TextView
        android:id="@+id/barra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="end"
        android:textSize="32sp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/boton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/boton44"
            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boton2"
            style="@style/botonrecto"
            android:text="1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/boton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/boton5"
            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toEndOf="@id/boton1"
            app:layout_constraintEnd_toStartOf="@+id/boton3"
            style="@style/botonrecto"
            android:text="2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/boton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/boton6"
            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toEndOf="@id/boton2"
            app:layout_constraintEnd_toStartOf="@id/botonmas"
            style="@style/botonrecto"
            android:text="3"
            android:textSize="20sp"/>
    <Button
        android:id="@+id/botonmas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/botonMult"
        app:layout_constraintTop_toBottomOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/boton3"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/botonrecto"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/boton44"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/boton7"
        app:layout_constraintTop_toBottomOf="@id/boton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/boton5"
        style="@style/botonrecto"
        android:text="4"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/boton5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/boton8"
        app:layout_constraintTop_toBottomOf="@id/boton2"
        app:layout_constraintStart_toEndOf="@id/boton44"
        app:layout_constraintEnd_toStartOf="@+id/boton6"
        style="@style/botonrecto"
        android:text="5"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/boton6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/boton9"
        app:layout_constraintTop_toBottomOf="@id/boton3"
        app:layout_constraintStart_toEndOf="@id/boton5"
        app:layout_constraintEnd_toStartOf="@id/botonIgual"
        style="@style/botonrecto"
        android:text="6"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/boton7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/boton8"
        style="@style/botonrecto"
        android:text="7"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/boton8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton5"
        app:layout_constraintStart_toEndOf="@id/boton7"
        app:layout_constraintEnd_toStartOf="@id/boton9"
        style="@style/botonrecto"
        android:text="8"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/boton9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton6"
        app:layout_constraintStart_toEndOf="@id/boton8"
        app:layout_constraintEnd_toStartOf="@id/botonc"
        style="@style/botonrecto"
        android:text="9"
        android:textSize="20sp"/>



    <Button
        android:id="@+id/botonIgual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonMult"
        app:layout_constraintStart_toEndOf="@id/boton6"
        app:layout_constraintBottom_toTopOf="@id/botonc"
        android:text="="
        style="@style/botonrecto"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/botonc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonIgual"
        app:layout_constraintStart_toEndOf="@id/boton9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="C"
        android:textSize="20sp"
        style="@style/botonrecto"
        />

    <Button
        android:id="@+id/botonMult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonmas"
        app:layout_constraintStart_toEndOf="@id/boton6"
        app:layout_constraintBottom_toTopOf="@id/botonIgual"
        android:text="*"
        android:textSize="20sp"
        style="@style/botonrecto"/>

    <Button
        android:id="@+id/boton0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonmenos"
        style="@style/botonrecto"
        android:text="0"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/botonmenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton9"
        app:layout_constraintStart_toEndOf="@id/boton0"
        app:layout_constraintEnd_toStartOf="@+id/botonc"
        style="@style/botonrecto"
        android:text="-"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
